// NAMESPACE THE APP
var CoolioApp = {
  Models:       {}, 
  Collections:  {},
  Views:        {},
  Router:       null,
  initialize:   function() {
   
  }, 
  checkLoginStatus: function() {
    
    FB.getLoginStatus(function(response) {
      console.log("CHECK FACEBOOK LOGIN STATUS");
      if (response.status === 'connected') {
        console.log("CONNECTED");
        CoolioApp.currentUserModel.set( {id: response.authResponse.userID} );
        CoolioApp.currentUserModel.fetch();
        Backbone.history.navigate("user/" + response.authResponse.userID, {trigger: true});
      } else if (response.status === 'not_authorized') {
        console.log("LOGGED INTO FB BUT NOT AUTHORIZED ON APP");
        Backbone.history.navigate("welcome", {trigger: true});
      } else {
        console.log("NOT LOGGED IN");
        Backbone.history.navigate("welcome", {trigger: true});
      }
    });
  }
}

// ASYNCHRONOUSLY LOAD THE FACEBOOK SDK
jQuery(function() {
 $('body').prepend('<div id="fb-root"></div>');

 (function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_US/all.js";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));

  window.fbAsyncInit = function() {
    FB.init({
      appId: '<%= ENV["FACEBOOK_KEY_COOL_IO"] %>',
      status     : true,
      frictionlessRequests : true,
      cookie: true
    });
    console.log("APP INITIALIZED");
    CoolioApp.checkLoginStatus();
  }
});